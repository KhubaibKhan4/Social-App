<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/avatar_profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/username_cardview"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">


        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_alternate_email_24"
            android:drawableTint="@color/main_green"
            android:paddingStart="5dp"
            android:text="Username"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fullname_cardview"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/username_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">


        <TextView
            android:id="@+id/fullname_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:drawableTint="@color/main_green"
            android:paddingStart="5dp"
            android:text="FullName"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/email_cardview"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fullname_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">


        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawableTint="@color/main_green"
            android:paddingStart="5dp"
            android:text="Email"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/gender_cardview"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">


        <TextView
            android:id="@+id/gender_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_male_24"
            android:drawableTint="@color/main_green"
            android:paddingStart="5dp"
            android:text="Gender"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dob_cardview"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_below="@+id/gender_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">


        <TextView
            android:id="@+id/dob_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/baseline_date_range_24"
            android:drawableTint="@color/main_green"
            android:paddingStart="5dp"
            android:text="DOB"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/update_profile"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dob_cardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Update  Profile"
        app:backgroundTint="@color/main_green" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_profile"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_logout_btn"
        android:text="Logout"
        app:backgroundTint="@color/main" />

</RelativeLayout>